{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["typings/**/*.ts", "typings/env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "lib": ["ES2021", "DOM", "DOM.Iterable"]
  }
}
